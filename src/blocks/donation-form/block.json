{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "bmcf/donation-form",
    "title": "Beacon Donation Form",
    "category": "widgets",
    "description": "Full-page BeaconCRM form with currency switcher.",
    "textdomain": "beacon-multi-currency-forms",
    "attributes": {
        "formName": {
            "type": "string",
            "default": ""
        },
        "customParams": {
            "type": "array",
            "default": []
        },
        "defaultFrequency": {
            "type": "string",
            "default": ""
        },
        "defaultAmount": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "html": false,
        "anchor": false,
        "customClassName": false,
        "reusable": true,
        "multiple": false
    },
    "style": "bmcf-front",
    "editorStyle": "bmcf-front",
    "icon": "money",
    "editorScript": "file:./editor.js"
}