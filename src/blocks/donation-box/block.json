{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wbcd/donation-box",
  "title": "Beacon Donation Box",
  "category": "widgets",
  "description": "donate box that sends donors to the full BeaconCRM form with preselected currency/frequency/amount.",
  "textdomain": "wp-beacon-multi-currency-forms",
  "attributes": {
    "formName": {
      "type": "string",
      "default": ""
    },
    "targetPageId": {
      "type": "number",
      "default": 0
    },
    "primaryColor": {
      "type": "string",
      "default": ""
    },
    "brandColor": {
      "type": "string",
      "default": ""
    },
    "title": {
      "type": "string",
      "default": "Make a donation"
    },
    "subtitle": {
      "type": "string",
      "default": "Pick your currency, frequency, and amount"
    },
    "noticeText": {
      "type": "string",
      "default": "You'll be taken to our secure donation form to complete your gift."
    },
    "buttonText": {
      "type": "string",
      "default": "Donate now â†’"
    },
    "customParams": {
      "type": "array",
      "default": []
    },
    "allowedFrequencies": {
      "type": "array",
      "default": [
        "single",
        "monthly",
        "annual"
      ]
    },
    "defaultPresets": {
      "type": "object",
      "default": {
        "single": [
          10,
          20,
          30
        ],
        "monthly": [
          5,
          10,
          15
        ],
        "annual": [
          50,
          100,
          200
        ]
      }
    }
  },
  "supports": {
    "html": false,
    "anchor": false,
    "customClassName": false,
    "reusable": true,
    "multiple": true
  },
  "style": "wbcd-front",
  "editorStyle": "wbcd-front",
  "icon": "money",
  "editorScript": "file:./editor.js"
}